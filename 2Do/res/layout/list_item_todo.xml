<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/padding_listitem" >
     
    <ImageView android:id="@+id/todoImage"
	 android:layout_width="wrap_content"
	 android:layout_height="wrap_content"
	 android:layout_gravity="center" 
	 android:src="@drawable/web" 
	 android:contentDescription="@string/stored"/> 
    
    <LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:layout_marginLeft ="5dp"
        android:layout_marginRight="5dp">
	    
        <TextView android:id="@+id/txtDate1stRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:singleLine="true"/>
        
        <TextView android:id="@+id/txtDate2ndRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"/>
        
	    
	    
    </LinearLayout>
    
     <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft ="5dp"
        android:layout_marginRight="5dp" >
        
        <TextView android:id="@+id/txtContent1stRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:singleLine="true"/>
        
        <TextView android:id="@+id/txtContent2ndRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        
    </LinearLayout>
 
</LinearLayout>