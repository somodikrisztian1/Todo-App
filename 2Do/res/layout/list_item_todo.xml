<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/padding_listitem" >
     
    <CheckBox android:id="@+id/todoCheckbox"
	 android:layout_width="wrap_content"
	 android:layout_height="wrap_content"
	 android:button="@drawable/selector_checkbox"
	 android:layout_gravity="center" />
    
    <LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
	    <TextView android:id="@+id/txtContent1stRow"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"/>
	    
	    <TextView android:id="@+id/txtContent2ndRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
	    
    </LinearLayout>
    
     <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView android:id="@+id/txtDate1stRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        
        <TextView android:id="@+id/txtDate2ndRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        
    </LinearLayout>
 
</LinearLayout>