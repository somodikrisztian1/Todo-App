<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- Pressed -->
    <item android:state_pressed="true">
        <shape><solid android:color="@color/orange"/></shape>
    </item>
    
    <!-- Selected -->
    <item android:state_focused="true">
        <shape><solid android:color="@color/blue_light"/></shape>
	</item>
	
    <!-- Default -->
    <item>
        <shape><gradient android:angle="90" android:startColor="@color/gray_light" android:endColor="@color/gray_verylight"/></shape>
    </item>

</selector>
